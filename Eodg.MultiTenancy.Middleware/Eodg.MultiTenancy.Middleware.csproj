<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>0.4.0-alpha</Version>
    <Authors>Jim Elrod</Authors>
    <Company>EODG</Company>
    <Description>Middleware to allow for multi-tenancy in .net core web api applications.</Description>
    <Copyright>2018</Copyright>
    <PackageLicenseUrl>https://github.com/jimelrod/MultiTenancyMiddleware/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/jimelrod/MultiTenancyMiddleware</RepositoryUrl>
    <PackageReleaseNotes />
    <PackageTags>web dotnet core multitenancy multi-tenancy middleware</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netcoreapp2.0\Eodg.MultiTenancy.Middleware.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.0.2" />
  </ItemGroup>

</Project>
